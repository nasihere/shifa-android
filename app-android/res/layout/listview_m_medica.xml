<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    >
    
 <TextView
     android:id="@+id/tvm_medica_status"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_above="@+id/txtm_m_item"
     android:layout_alignParentRight="true"
     android:layout_alignParentTop="true"
     android:layout_toRightOf="@+id/imgRem1"
     android:gravity="center_vertical"
     android:text="@string/app_name"
     android:textAppearance="?android:attr/textAppearanceMedium"
     android:textColor="@color/c_blue" />

    <ImageButton
        android:id="@+id/imgRem1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_home_materiamedica"
        android:contentDescription="@string/emptystring"
       />

    <TextView
        android:id="@+id/txtm_m_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgRem1"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/imgRem1"
        android:gravity="center_vertical"
        android:text="@string/app_name"
        android:textColor="@color/c_graydark"
        android:textColorHint="@color/reportTableBG" />
    
</RelativeLayout>

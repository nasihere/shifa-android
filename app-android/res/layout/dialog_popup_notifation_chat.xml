<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
 
        android:background="@color/c_blue"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/tv_d_p_n_c_img_reply"
            android:layout_width="wrap_content"
            android:background="@color/textShadow"
            android:layout_height="wrap_content"
            
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_chat_reply" />

        <ImageView
            android:id="@+id/tv_d_p_n_c_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/ic_chat_doctor" />

        <TextView
            android:id="@+id/tv_d_p_n_c_chatter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@+id/tv_d_p_c_chat_show1"
            android:layout_toRightOf="@+id/tv_d_p_n_c_icon"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/tv_d_p_n_c_chat"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_d_p_n_c_chatter"
            android:layout_alignBottom="@+id/tv_d_p_n_c_chatter"
            android:layout_toLeftOf="@+id/tv_d_p_n_c_img_reply"
            android:layout_toRightOf="@+id/tv_d_p_n_c_chatter"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_d_p_c_chat_show1"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_d_p_n_c_chatter"
            android:layout_alignParentTop="true"
            android:text="Chat:"
            android:textAppearance="?android:attr/textAppearanceSmall"
             />

    </RelativeLayout>

</LinearLayout>
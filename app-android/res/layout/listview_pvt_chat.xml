<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/PvtChatPersonalRelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

<ImageView
     android:id="@+id/PvtChatPersonalviewLeftIco"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentLeft="true"
     android:layout_below="@+id/tv_chat_loadmsg"
     android:background="@drawable/ic_chat_student"
     android:contentDescription="@string/emptystring" />

    <TextView
        android:id="@+id/PvtChatPersonalview_chatmsgright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/PvtChatPersonalview_chatmsg"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/PvtChatPersonalviewLeftIco"
        android:background="@drawable/bubble_yellow"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceSmall" />

<ImageView
    android:id="@+id/PvtChatPersonalviewRightIco"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:background="@drawable/ic_chat_student"
    android:contentDescription="@string/emptystring" />

<TextView
    android:id="@+id/PvtChatPersonalview_chatmsg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_margin="5dp"
    android:layout_toLeftOf="@+id/PvtChatPersonalviewRightIco"
    android:background="@drawable/bubble_green"
    android:gravity="right"
    android:text="@string/app_name"
    android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
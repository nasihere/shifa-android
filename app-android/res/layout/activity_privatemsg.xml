<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/PvtMsgListView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/PvtChatPersonalmsgSend"
            android:descendantFocusability="beforeDescendants"
            android:drawSelectorOnTop="true"
            android:focusable="true" >

        </ListView>

  
    <EditText
        android:id="@+id/PvtChatPersonalmsgSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:hint="Write a message"
        android:visibility="gone"
        android:focusable="true"
        android:layout_toLeftOf="@+id/PvtChatPersonalviewBtnSend"
        android:ems="10" >

    </EditText>

    <Button
        android:id="@+id/PvtChatPersonalviewBtnSend"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:background="@drawable/ic_chat_msg_send" />
	</RelativeLayout>
</RelativeLayout>
